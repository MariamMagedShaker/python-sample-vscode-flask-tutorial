node('java'){
    def XYZ='Hello ITI'
    checkout scm

    stage('build Docker image'){
        sh ''' echo "${XYZ}" '''
        sh "docker build -t mariam191/python_app:v${BUILD_NUMBER} ."

    }
    stage("Push Docker image"){
        sh "docker push mariam191/python_app:v${BUILD_NUMBER}"
        }

}